@model Text_EP.Models.Expert

@{
    Layout = null;
}
<meta name="viewport" content="width=device-width" />
<title>小工具</title>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/modernizr-2.6.2.js"></script>


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script src="~/Scripts/EP_JS.js"></script>

<div id="top" style="text-align:center;">
    <h4>微信文章添加工具</h4>
</div>
<div id="body">
    
    @using (Html.BeginForm("insert", "EP", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @*@Html.ValidationSummary()*@
        <table align="center" style="width:auto" class="table-hover">
            <tr>
                <td colspan="2"><a href="~/EP/Select">返回</a></td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Titles)<!--获取Models中字段的中文名称-->
                </td>
                <td>
                    @Html.EditorFor(model => model.Titles)<!--显示一个文本框-->

                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Titles)<!--显示模型验证返回的消息-->
                    <samp id="Titles_samp" style="color:red;">文章标题不能为空！</samp>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Links)<!--获取Models中字段的中文名称-->
                </td>
                <td>
                    @Html.EditorFor(model => model.Links)<!--显示一个文本框-->

                </td>
                <td>
                    @Html.ValidationMessageFor(model => model.Links)<!--显示模型验证返回的消息-->
                    <samp id="Links_samp" style="color:red;">文章链接不能为空！</samp>
                </td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Doctor)</td>
                <td>
                    @Html.DropDownListFor(model => model.Doctor, ViewData["statusSelect"] as SelectList, new { @class = "form-control" })
                </td>
                <td></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.TitlesType)</td>
                <td>
                    @Html.DropDownListFor(model => model.TitlesType, ViewData["statusSelect1"] as SelectList, new { @class = "form-control" })
                </td>
                <td></td>
            </tr>
            <tr>
                <td>
                    <b>选择显示大图</b>
                </td>
                <td>
                    <input id="File1" type="file" name="Picture" />
                </td>
                <td>                    
                    <samp id="PicPath_samp" style="color:red;">图片格式不对，请重新选择！</samp>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input id="Submit1" type="submit" value="添加" class="btn btn-primary btn-sm" />
                </td>
            </tr>
        </table>
        
    }
</div>
<div id="bottom"></div>

<!--定义了一个节，而且节的名字叫Scripts-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}